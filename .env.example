# Example Environment Configuration
# Copy this file to .env and customize values for your environment

#================================
# Application Configuration
#================================
APP_ENVIRONMENT=development
APP_LOG_LEVEL=info

#================================
# Server Configuration
#================================
APP_SERVER_PORT=8080
APP_SERVER_READ_TIMEOUT=30
APP_SERVER_WRITE_TIMEOUT=30
APP_SERVER_IDLE_TIMEOUT=120

#================================
# Database Configuration
#================================
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_USER=postgres
APP_DATABASE_PASSWORD=change_me
APP_DATABASE_NAME=adprocessing
APP_DATABASE_SSLMODE=disable
APP_DATABASE_MAX_OPEN_CONNS=25
APP_DATABASE_MAX_IDLE_CONNS=25
APP_DATABASE_CONN_MAX_LIFETIME=5

# Migration Database URL (for Goose)
# Format: postgres://user:password@host:port/dbname?sslmode=disable
DATABASE_URL=postgres://postgres:change_me@localhost:5432/adprocessing?sslmode=disable

#================================
# Redis Configuration
#================================
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_PASSWORD=
APP_REDIS_DB=0
APP_REDIS_POOL_SIZE=10
APP_REDIS_READ_TIMEOUT=3
APP_REDIS_WRITE_TIMEOUT=3
APP_REDIS_IDLE_TIMEOUT=300

#================================
# Queue Configuration
#================================
APP_QUEUE_ANTI_STARVATION=true
APP_QUEUE_MAX_WAIT_TIME=300
APP_QUEUE_WORKER_COUNT=3
APP_QUEUE_BATCH_SIZE=10
APP_QUEUE_PROCESSING_TIMEOUT=30
APP_QUEUE_SHARD_COUNT=4

#================================
# AI Configuration
#================================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
APP_AI_CACHE_ENABLED=true
APP_AI_CACHE_TTL=3600
APP_AI_TIMEOUT=30
APP_AI_MAX_RETRIES=3

#================================
# Kafka Configuration
#================================
APP_KAFKA_BROKER_1=localhost:9092
APP_KAFKA_PRODUCER_BATCH_SIZE=100
APP_KAFKA_PRODUCER_FLUSH_MS=100
APP_KAFKA_CONSUMER_GROUP_ID=ad-processing
APP_KAFKA_CONSUMER_AUTO_OFFSET=latest

#================================
# Build Configuration
#================================
BUILD_VERSION=dev
BUILD_COMMIT=local
BUILD_TIME=

#================================
# Docker Configuration
#================================
DOCKER_REGISTRY=localhost:5000
DOCKER_NAMESPACE=ad-processing
DOCKER_TAG=latest

#================================
# Test Configuration
#================================
TEST_DATABASE_URL=postgres://postgres:change_me@localhost:5432/adprocessing_test?sslmode=disable
TEST_REDIS_URL=redis://localhost:6379/1

#================================
# Production Specific
#================================
# Uncomment and set these for production environments

